        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GoodnessLevel)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "ThemeParkRating", new { id = item.ThemeParkRatingID }, null) |
                    @Html.ActionLink("Details", "Details", "ThemeParkRating", new { id = item.ThemeParkRatingID }, null) |
                    @Html.ActionLink("Delete", "Delete", "ThemeParkRating", new { id = item.ThemeParkRatingID }, null)
                </td>
            </tr>
        }

    </table>
